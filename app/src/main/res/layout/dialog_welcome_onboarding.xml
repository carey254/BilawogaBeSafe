<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/white">

        <!-- App Logo -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="BilaWoga App Logo"
            android:layout_marginBottom="16dp"/>

        <!-- Main Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to BilaWoga"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Personal Emergency Protection System"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- App Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BilaWoga uses advanced AI to detect emergencies and automatically send help when you need it most. Your safety is our top priority."
            android:textColor="@color/gray_700"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- Feature Highlights Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Key Features:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🛡️ 24/7 Protection\n🤖 AI-Powered Detection\n📱 Silent Emergency Alerts\n🌍 Works Worldwide"
                    android:textColor="@color/gray_700"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Clear Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 Setup Process:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Review Privacy Policy\n2. Read Terms of Use\n3. Accept and confirm\n4. Set up emergency contacts"
            android:textColor="@color/gray_700"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="24dp"/>

        <!-- Primary Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartOnboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🚀 START SETUP NOW"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="12dp"/>

        <!-- Restore from Cloud (Visible only when backup exists) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRestoreNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="☁ Restore from Cloud"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:cornerRadius="10dp"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="1dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"/>

        <!-- Secondary Actions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Want to review policies first?"
            android:textColor="@color/gray_700"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/privacyPolicyLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📄 Privacy Policy"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:padding="8dp"
                app:cornerRadius="8dp"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="1dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/termsLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📋 Terms of Use"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:padding="8dp"
                app:cornerRadius="8dp"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="1dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Help Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Tip: You can review policies anytime during setup"
            android:textColor="@color/gray_700"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

