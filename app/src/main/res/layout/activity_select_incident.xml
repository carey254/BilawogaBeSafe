<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/background">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Setup"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select your current emergency situation or set up for future protection"
        android:textSize="16sp"
        android:textColor="@color/gray_700"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <!-- Setup Mode Info Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#E3F2FD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Setup Mode Available"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you don't have a current emergency, you can set up BilaWoga for future protection. The app will be ready to use when you need it."
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Incident Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Incident Type:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/incidentSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:minHeight="48dp"
        android:background="@drawable/edittext_background"
        android:padding="12dp"/>

    <!-- Manual input if needed -->
    <EditText
        android:id="@+id/manualIncidentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edittext_background"
        android:hint="Or describe your emergency..."
        android:minHeight="48dp"
        android:padding="12dp"
        android:textSize="14sp"
        android:inputType="textMultiLine"
        android:maxLines="3"/>

    <!-- Confirm Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Selection"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:cornerRadius="8dp"
        app:backgroundTint="@color/colorPrimary"
        android:onClick="confirmIncident"/>

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:cornerRadius="8dp"
        app:backgroundTint="@color/white"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="8dp"
        android:onClick="goBack"/>

</LinearLayout>
